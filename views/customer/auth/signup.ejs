<%- include('../../shared/includes/head',{pageTitle:'SignUp'}) %>
<link rel="stylesheet" href="/styles/form.css">
<link rel="stylesheet" href="styles/auth.css">
</head>
<body>
    <%- include('../../shared/includes/header') %>
    <main>
        <h1>Create New Account</h1>
        <% if (inputData.errorMessage){ %>
            <section class="alert">
                <h2>Invalid Input</h2>
                <p><%= inputData.errorMessage%></p>

            </section>
        <% } %>

      
        <form action="/signup" method="POST">
        <input type="hidden" name="_csrf" value="<%= locals.csrfToken %>">
            <p>
                <label for="email">E-Mail</label>
                <input type="email" id="email" name="email" value="<%= inputData.email %>" required>
            </p>
            <p>
                <label for="confirm-email">Confirm E-Mail</label>
                <input type="email" id="confirm-email" name="confirmEmail" value="<%= inputData.confirmEmail %>" required>
            </p>
            <p>
                <label for="password">Password</label>
                <input type="password" id="password" name="password" value="<%= inputData.password %>" required>
            </p>
        <hr>
             <!-- <h1>Personal Info</h1>  -->
            <p>
                <label for="full-name">Name</label>
                <input type="text" id="full-name" name="fullname" value="<%= inputData.fullname %>" required>
            </p>
            <p>
                <label for="city">City</label>
                <input type="text" id="city" name="city" value="<%= inputData.city %>" required>
            </p>
            <p>
                <label for="address">Address</label>
                <input type="text" id="address" name="address" value="<%= inputData.address %>" required>
            </p>
            <p>
                <label for="pin-code">Pin-Code</label>
                <input type="text" id="pin-code" name="pincode" minlength="6" maxlength="6" value="<%= inputData.pincode %>" required>
            </p>
            <button type="submit" id="createAccount" class="btn">Create Account</button>
            <p id="switch-form"><a href="/login">Already have an Account ? Login Instead</a></p>
        </form>
        <script>
            var createAccount=document.getElementById("createAccount");
            createAccount.addEventListener("click", function(){
               // alert("Button Click");
            });

        </script>
    </main>


<%-include('../../shared/includes/footer')%>